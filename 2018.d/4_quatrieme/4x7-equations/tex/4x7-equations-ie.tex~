\section*{ie - Équations}
\begin{center}
  \textit{Théophraste- La plus coûteuse des dépenses, c’est la perte de temps.}
\end{center}
\horrule{2px}

\subsection*{ex1 - Calculs  à trou}
\textit{Trouver le nombre manquant.}

\begin{multicols}{3}
 \begin{eqnarray*}
−5 \times (−8) = \Pointille[1] \\
\Pointille[1] + 2 = 9 \\
\Pointille[1] − 9 = 10 \\
−4 − (−9) = \Pointille[1] \\
−4 \div 2 = \Pointille[1] \\
\Pointille[1] \div 4 = 2 \\
\Pointille[1] − (−1) = 4  \\
\Pointille[1] × (−9) = 63  \\
−1 + 9 = \Pointille[1]  \\
4 + 2 = \Pointille[1]  \\
−7 − (−10) = \Pointille[1]  \\
−3 \times (−4) = \Pointille[1]  \\
−8 \div 1 = \Pointille[1]  \\
−2 \times 10 = \Pointille[1]  \\
\Pointille[1] \times 6 = −36  \\
−3 + \Pointille[1] = −13  \\
−13 − (−6) = \Pointille[1]  \\
\Pointille[1] \div 3 = −6  \\
8 \div (−4) = \Pointille[1]  \\
\Pointille[1] + (−6) = −4  \\
\end{eqnarray*}

\textit{Résoudre les équations.} \textbf{Écrire les étapes.} Rédiger soigneusement.
\begin{multicols}{2}
\subsection*{ex2 - Équations 1}

 \begin{eqnarray*}
        x + 12 &=& 25  \\
	        3x + 10 &=& 40  \\
	        2x - 5  &=& 26  \\
	        8x - 12 &=& -45 \\
	      -12x + 14 &=& 102 \\
	      -15x - 16 &=& -24 \\
	       -6x - 24 &=& 32  \\
		    10 + 5x &=& 22  \\
			80x + 12 = 12 \\
	\sqrt{2} x + 12 &=& 40 
\end{eqnarray*}


\subsection*{ex3 - Équations 2}
\textit{Résoudre les équations.} \textbf{Écrire les étapes.} Rédiger soigneusement.
 \begin{eqnarray*}
       4x + 2 &=& 2x + 12    \\
	  8x + 12 &=& 6x - 4     \\
	 24x - 22 &=& 5x + 12    \\
	-12x + 13 &=& 4x -20     \\
	 -8x - 10 &=& -12x - 24  \\
	4,2x + 14 &=& 5x + 36    \\
	  5,4x + 21 &=& x - 14,5 \\
	  15 + 2x &=& 8x - 21,1  \\
	   9 - 2x &=& 104 +  x   \\
	   \dfrac{5}{x} = \dfrac{10}{102}
\end{eqnarray*}
\end{multicols}

\section*{ie - Équations}
\begin{center}
  \textit{Théophraste- La plus coûteuse des dépenses, c’est la perte de temps.}
\end{center}
\horrule{2px}

\subsection*{ex1 - Calculs  à trou}
\textit{Trouver le nombre manquant.}

\textit{Résoudre les équations.} \textbf{Écrire les étapes.} Rédiger soigneusement.
\begin{multicols}{2}
\subsection*{ex2 - Équations 1}

 \begin{eqnarray*}
             x + 14 &=& 30  \\
	        2x + 12 &=& 45  \\
	        3x - 3  &=& 31  \\
	        3x - 10 &=& -40 \\
	      -10x + 16 &=& 108 \\
	      -14x - 18 &=& -29 \\
	       -5x - 26 &=& 38  \\
		    12 + 5x &=& 28  \\
			70x + 14 = 18   \\
	\sqrt{2} x + 14 &=& 45 
\end{eqnarray*}


\subsection*{ex3 - Équations 2}
\textit{Résoudre les équations.} \textbf{Écrire les étapes.} Rédiger soigneusement.
 \begin{eqnarray*}
       6x + 4 &=& 3x + 14    \\
	  10x + 14 &=& 7x - 3    \\
	 26x - 20 &=& 3x + 10    \\
	-10x + 15 &=& 5x - 30    \\
	 -6x - 8 &=& -11x - 22   \\
	6,2x + 6 &=& 6x + 38     \\
	  7,4x + 23 &=& x - 12,5 \\
	  18 + 4x &=& 9x - 20,2  \\
	   11 - 2x &=& 106 +  x  \\
	   \dfrac{10}{x} = \dfrac{20}{202}
\end{eqnarray*}
\end{multicols}

